<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="@dimen/small_margin"
    android:paddingBottom="@dimen/small_margin">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="@dimen/small_margin"
        android:importantForAccessibility="no"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/vector_bitcoin_colored" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tx_type"
        style="@style/Text.Semibold.16"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginEnd="@dimen/tiny_margin"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@id/status_date"
        app:layout_constraintEnd_toStartOf="@id/asset_balance_crypto"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Send BTC" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/status_date"
        style="@style/Text.Semibold.Light.14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/tiny_margin"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/asset_balance_fiat"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/tx_type"
        app:layout_constraintTop_toBottomOf="@id/tx_type"
        tools:text="Confirming" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/asset_balance_crypto"
        style="@style/Text.Semibold.16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_margin"
        app:layout_constraintBottom_toBottomOf="@id/tx_type"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1.638192 BTC" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/asset_balance_fiat"
        style="@style/Text.Semibold.Light.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/standard_margin"
        app:layout_constraintBottom_toBottomOf="@id/status_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/status_date"
        tools:text="$15,879.90" />

</androidx.constraintlayout.widget.ConstraintLayout>